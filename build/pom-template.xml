<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.trustwave</groupId>
    <artifactId>cdcm</artifactId>
    <packaging>pom</packaging>
    <version>%{version}</version>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>attach-artifact</id>
                        <phase>install</phase>
                        <goals>
                            <goal>attach-artifact</goal>
                        </goals>
                        <configuration>
                            <artifacts>
                                <artifact><file>%{rpm_file}</file><type>rpm</type><classifier></classifier></artifact>
                            </artifacts>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <repository>
            <id>trustwave_deploy</id>
            <name>tw repo</name>
            <url>
                https://%{hostname}/content/repositories/releases/
            </url>
        </repository>
        <snapshotRepository>
            <id>trustwave_deploy</id>
            <url>
                https://%{hostname}/content/repositories/snapshots/
            </url>
        </snapshotRepository>
    </distributionManagement>

    <!-- Distribution management (copied from ng.external-parent -->
</project>
